{
  "$id": "https://local.schemas/priorities.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "version",
    "updated_at",
    "policy",
    "queue"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "updated_at": {
      "$ref": "https://local.schemas/common.schema.json#/definitions/iso_date"
    },
    "policy": {
      "type": "object",
      "required": [
        "strategy"
      ],
      "properties": {
        "strategy": {
          "type": "string"
        },
        "tie_breakers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "queue": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "task_id",
          "title",
          "file",
          "priority",
          "status"
        ],
        "properties": {
          "task_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "file": {
            "type": "string"
          },
          "priority": {
            "type": "integer"
          },
          "status": {
            "type": "string",
            "enum": [
              "todo",
              "doing",
              "done",
              "blocked"
            ]
          },
          "blocked_by": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}